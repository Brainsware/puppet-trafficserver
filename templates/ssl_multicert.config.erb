<%- if @ssl_host and not @ssl_host.empty? -%>
	<%- fail("Host does not contain a ssl_cert_name!") unless @ssl_host.has_key?("ssl_cert_name") -%>
  <%- @ssl_host.each do |k,v| -%>
      <%- fail("#{k} is not a valid Traffic Server SSL directive") unless ['dest_ip', 'ssl_cert_name', 'ssl_ca_name', 'ssl_key_name'].include?(k) -%>
<%= k %>=<%= v -%><%= ' ' -%>
    <%- end -%>
<%= "\n" -%>
<%- end -%>
